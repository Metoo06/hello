.user_info{
  background-color: #e85654;width: 100%; 
  display: flex;
	flex-direction: column;
	align-items: center;
  padding:50rpx 0;
  }
.user_info .user_img {
	width: 160rpx;
	height: 160rpx;
}
.user_info .user_img image{
  width:100%;
  height: 100%;
  border-radius: 50%;
}
.user_info text{color:#fff;}
.bg{
  height: 25rpx;
  width: 100%;
  background: #eee;
}
.content .balance{
  margin-left: 20rpx;
  margin-top:20rpx;
}
.head_pay{display: flex;}
.head_pay button{
  flex-grow: 1;
  margin:20rpx 20rpx;
  color: #fff;
}
.head_pay button:first-child{
  background-color:#10e53d;
}
.head_pay button:last-child{
  background-color:#eb436f;
}
.integral{
  display:flex;
  padding: 10rpx 20rpx;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
}
.integral text{
  font-size: 30rpx;
  line-height: 80rpx;
}
.integral text text{
  color:#ddeb43;
}
.my-item{
    width: 100%; 
    border-bottom: 2px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    font-size: 30rpx;
    margin: 20rpx 0;
}
.my-item navigator{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.my-item text{
  margin-left: 20rpx;
}
.my-item image{
  width:16rpx;height:24rpx;
  margin-right:80rpx;
  }
