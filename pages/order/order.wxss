.nav{
  width:100%;
  height:80rpx;
  line-height: 70rpx;
  background-color: #fff;
  font-size: 30rpx;
  /* box-sizing: border-box; */
  overflow: hidden;
  background: #f7f7f7;
  white-space: nowrap;
}
.nav_com {
 width: 20%;
 display: inline-block;
 text-align: center;
}
.show{
  color: #dd2727;  
  border-bottom: 5rpx solid #dd2727;
}
.content{
  width:100%;
  height:100%;
  position:absolute;
}
.order_no{
  margin-top: 20rpx;
  width:100%;
  text-align: center;
  color:#666;
}
.order_no image{
  width:200rpx;
  height:200rpx;
}
.order_show{
  width:100%;
  display:flex;
}
.goods_info{
  width:72%;
}
.goods_img{
  width:28%;
  text-align: center;
}
.goods_img image{
  width:180rpx;
  height:180rpx;
}
.goods_info .goods_name{
  font-size: 38rpx;
   width:90%; 
  overflow:hidden; 
  /* text-overflow:ellipsis;  */
   display:-webkit-box; 
   -webkit-line-clamp:1; 
   -webkit-box-orient:vertical;  


}
.goods_info .goods_des{
  font-size:25rpx;
  color:#999;
}
.goods_info .money{
  color:#dd2727;
  font-size: 40rpx;
}
.goods_info .order_bottom{
  display: flex;
  color:#dd2727;
  font-size: 28rpx;
  justify-content: flex-end;
}
.goods_info .order_bottom .order_1{
  margin: 0 15rpx;
}

