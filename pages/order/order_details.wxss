.head{
  display: flex;
  background-color:#fd8c02;
  align-items: center;
  width: 100%;
}
.head_time{
  color:#fff;
  /* width: 60%; */
  margin: 0 auto;
}
.head_time view{
  font-size: 35rpx;
}
.head_time text{
  font-size: 25rpx;
}
.head_img{
  width:40%;
}
.head_img image{
  margin-top: 10rpx;
  width:160rpx;
  height:160rpx;
}
.address{
  display:flex;
  color:#999;
  font-size: 30rpx;
  padding:20rpx 0;
}
.address .address_img{
  margin:auto 3%;
}
.address .address_img image{
  width:50rpx;
  height:50rpx;
}
.address .address_info{
  margin-right: 3%;
}
.address .address_info view text{
  float:right;
}
.bg{
  width:100%;
  height:20rpx;
  background-color:#eee;
}
.goods_box {
  font-size: 40rpx;
  margin-left: 3%;
  padding:20rpx 0px;
}
.goods{
  display:flex;
  padding:20rpx 3%;
  background: #fafafa;
}
.goods .goods_img image{
  width:160rpx;
  height:160rpx;
}
.goods .goods_info{
  margin-left:2%;
}
.goods .goods_name{
  font-size:35rpx;
}
.goods .goods_spec{
  font-size: 25rpx;
  color:#999;
}
.goods .goods_mony{
  font-size:30rpx;
  color:red;
}
.order_info{
  padding:0 3%;
}
.order_info .order_ma{
  font-size:25rpx;
  color:#999;
  margin-top:20rpx;
}
.order_info .order_ma text{
  float:right;
}
.order_info .total{
  margin-top:20rpx;
  font-size: 30rpx;
  color:#333;
}
.order_info .total text{
  float:right;
}
.order_info .pay{
  color:#333;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.order_info .pay text{
  float: right;
  color:#fd8c02;
}
.button{
  position:fixed;
  bottom:0;
  width: 100%;
}
.button button{
  background: #fd8c02;
  color:#fff;
}
/*支付弹出阴影  */
.pay_shadow{
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;
}
.pay_content{
  width:70%;
  background-color:#fff;
  position: fixed;
  z-index: 1001;
  /* margin:0 15%; */
  left:15%;
  top:30%;
}
.pay_content .pay_title{
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.pay_content .pay_mony{
  color:#fd8c02;
  font-size:35rpx;
  text-align: center;
}
.pay_content .explain{
  color:#999;
  font-size: 26rpx;
  padding:0 5%;
}
.pay_content button{
  background-color: #fd8c02;
  color:#fff;
  width: 90%;
  margin:20rpx;
}