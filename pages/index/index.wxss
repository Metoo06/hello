.banner{width:100%;}
.banner image{
  width:100%;
  height:500rpx;
}
.content{
  padding:0 10rpx;
}
.content .com{
  font-size: 32rpx;
  padding:15rpx 0;
  border-bottom:3rpx solid #ccc;
  margin-bottom:10rpx;
}
.content scroll-view{
  white-space:nowrap;
  overflow: hidden;
  width: 100%;
}
.SecKill scroll-view .SecKill_con{
  display: inline-block;
  width:250rpx;
  text-align: center;
  margin:0 10rpx;
}
.SecKill scroll-view .SecKill_con image{
  width:250rpx;
  height: 200rpx;
}
.SecKill scroll-view .SecKill_con .SecKill_name{
  font-size: 28rpx;
  overflow: hidden;
}
.SecKill scroll-view .SecKill_con .SecKill_price{
  color:#333;
  font-size: 25rpx;
}
.SecKill scroll-view .SecKill_con .SecKill_price span{
  color:red;
}
.coupon .coupon_item{
  width:250rpx;
  /* height: 200rpx; */
  background-color:#f1a83b;
  color:#fff;
  display:inline-block;
  margin:0 10rpx;
  padding:6px;
}
.coupon .coupon_item .coupon_item_c{
  font-size:38rpx;
}
.coupon .coupon_item .coupon_item_m{
  font-size: 28rpx;
}
.goods .goods_con{
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  box-sizing:content-box;
  padding:24rpx;
}
.goods .goods_con image{
  width: 340rpx;
  height: 340rpx;
}
.goods .goods_con .goods_name{
  font-size: 30rpx;
}
.goods .goods_con .goods_price{
  font-size: 30rpx;
  color:red;
}